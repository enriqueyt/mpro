{
  "name": "mpro",
  "version": "0.1.0-SNAPSHOT.0",
  "private": true,
  "description": "MPRO Core App",
  "scripts": {
    "start": "npm run notifications:start; node src/bin/www",
    "start:dev": "npm run notifications:start; nodemon src/bin/www",
    "pm2:start": "npm run notifications:start; pm2 start src/bin/www",
    "pm2:restart": "pm2 restart $(pm2 id www | grep -oP [0-9]+)",
    "pm2:stop": "npm run notifications:stop; pm2 stop $(pm2 id www | grep -oP [0-9]+)",
    "pm2:remove": "pm2 delete $(pm2 id www | grep -oP [0-9]+)",
    "pm2:ls": "pm2 ls",
    "notifications:start": "bash scripts/notifications.sh start > /dev/null 2>/dev/null &",
    "notifications:stop": "bash scripts/notifications.sh stop > /dev/null 2>/dev/null &",
    "pretest": "npm run lint",
    "test": "",
    "posttest": "",
    "lint": "jshint src/*.js src/**/*.js",
    "build:clean": "rimraf build",
    "prebuild": "npm run build:clean; node scripts/clean-pkg",
    "build": "bash scripts/build.sh",
    "postbuild": "node scripts/restore-pkg"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "~1.17.1",
    "cookie-parser": "~1.4.3",
    "csurf": "^1.9.0",
    "debug": "~2.6.3",
    "express": "~4.15.2",
    "express-session": "^1.15.3",
    "moment": "^2.19.1",
    "mongo-sanitize": "^1.0.0",
    "mongoose": "^4.11.1",
    "morgan": "~1.8.1",
    "nodemailer": "^4.6.4",
    "nodemon": "^1.17.3",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pm2": "^2.7.2",
    "pug": "~2.0.0-beta11",
    "sanitizer": "^0.1.3",
    "serve-favicon": "~2.4.2",
    "sib-api-v3-sdk": "^4.0.1",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "jshint": "^2.9.5",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.3.21"
  }
}
